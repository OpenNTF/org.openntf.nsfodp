<?eclipse version="3.4"?>
<plugin>
	<extension point="org.eclipse.wildwebdeveloper.xml.xmllsExtension">
		<jar path="ext/org.openntf.nsfodp.lsp4xml.xsp.jar"/>
	</extension>
   <extension
         point="org.eclipse.lsp4e.languageServer">
      <contentTypeMapping
            contentType="org.openntf.nsfodp.eclipse.nsfodpXsp"
            id="org.openntf.nsfodp.lsp.xsp">
      </contentTypeMapping>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editorContentTypeBinding
            contentTypeId="org.openntf.nsfodp.eclipse.nsfodpXsp"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
   </extension>
   
   <extension
         point="org.eclipse.tm4e.registry.grammars">
      <scopeNameContentTypeBinding
            contentTypeId="org.openntf.nsfodp.eclipse.nsfodpXsp"
            scopeName="source.xml">
      </scopeNameContentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.tm4e.languageconfiguration.languageConfigurations">
      <languageConfiguration
            contentTypeId="org.openntf.nsfodp.eclipse.nsfodpXsp"
            path="language-configurations/xsp/xsp.language-configuration.json">
      </languageConfiguration>
   </extension>
</plugin>
