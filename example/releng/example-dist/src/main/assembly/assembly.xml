<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<!-- Local files -->
	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<outputDirectory>.</outputDirectory>
			<lineEnding>windows</lineEnding>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../../..</directory>
			<includes>
				<include>LICENSE</include>
			</includes>
			<outputDirectory>.</outputDirectory>
			<lineEnding>windows</lineEnding>
		</fileSet>
	</fileSets>
	
	<moduleSets>
		<!-- The final update site -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.openntf.nsfodp:org.openntf.nsfodp.example.updatesite</include>
			</includes>
			
			<binaries>
				<attachmentClassifier>assembly</attachmentClassifier>
				<outputDirectory>UpdateSite</outputDirectory>
				<unpack>true</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
		<!-- The Example NSF -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.openntf.nsfodp:nsf-example</include>
			</includes>
			
			<binaries>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		
		
	</moduleSets>
</assembly>
